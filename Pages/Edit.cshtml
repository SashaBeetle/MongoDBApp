@page
@model MongoDBApp.Pages.EditModel
@{
}
<h1>Edit @Model</h1>

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="row mb-3">
            <div class="col-2 px-2">
                <label asp-for="Ownfilm.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Ownfilm.Title" class="w-100 form-control" value="@Model.film.Title" />
                <span asp-validation-for="Ownfilm.Title" class="text-error"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2 px-2">
                <label asp-for="Ownfilm.Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="Ownfilm.Description" class="w-100 form-control" value="@Model.film.Description" />
                <span asp-validation-for="Ownfilm.Description" class="text-error"></span>
            </div>
        </div>
       

        <div class="row mt-4 mb-2">
            <div class="col-3">
                <input type="submit" class="w-100 form-control" value="Confirm" />
            </div>
        </div>
    </form>
</div>
